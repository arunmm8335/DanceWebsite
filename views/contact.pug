extends base.pug


block scripts
    script(src='/static/index.js')

block style
    style
        include ../static/style.css
        include ../static/contactstyle.css

block content
    div.container 
        h1 Contact Form
        form(action="/contact", method='post', class="myform")
            input(type="text", class="myInput", name="myname", placeholder="Enter your name")
            input(type="text", class="myInput", name="father_name", placeholder="Enter your father's name")
            input(type="text", class="myInput", name="mother_name", placeholder="Enter your mother's name")
            input(type="date", class="myInput", name="dob", placeholder="Enter your date of birth")
            input(type="number", class="myInput", name="age", placeholder="Enter your age")
            input(type="email", class="myInput", name="email", placeholder="Enter your email")
            textarea(name="more", class="myInput", cols="30", rows="10", placeholder="Enter your query")
            button.btn(type='submit') submit 
            


